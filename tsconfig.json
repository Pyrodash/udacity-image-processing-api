{
    "compilerOptions": {
        "baseUrl": "./src/",
        "outDir": "./dist/",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2021",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowJs": true,
    },
    "exclude": ["node_modules", "dist"]
}